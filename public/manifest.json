{
  "manifest_version": 3,
  "name": "browser-QR",
  "version": "0.1",
  "description": "a chrome extension to auto scan QR code on the page and generate QR code",
  "background": {
    "service_worker": "./background.js"
  },
  "permissions": ["tabs", "activeTab", "scripting"],
  "author": "Bunnet Phoung",
  "host_permissions": ["http://*/", "https://*/"],
  "short_name": "b-QR",
  "action": {
    "default_popup": "popup.html",
    "default_title": "QR Scanner",
    "default_icon": {
      "16": "/images/browserqr16.png",
      "32": "/images/browserqr32.png",
      "48": "/images/browserqr48.png",
      "128": "/images/browserqr128.png"
    }
  },
  "icons": {
    "16": "/images/browserqr16.png",
    "32": "/images/browserqr32.png",
    "48": "/images/browserqr48.png",
    "128": "/images/browserqr128.png"
  }
}
